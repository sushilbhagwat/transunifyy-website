---
// ApplicationForm.astro
// Standalone component for job applications - matches Contact form styling

// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Props from parent layout
interface Props {
  jobTitle: string;
  jobSlug: string;
  jobDepartment: string;
}

const { jobTitle, jobSlug, jobDepartment } = Astro.props;

// Environment variables
const SUPABASE_URL = import.meta.env.PUBLIC_SUPABASE_URL || '';
const SUPABASE_ANON_KEY = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || '';
const TURNSTILE_SITE_KEY = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '';

// Notice period options
const noticePeriodOptions = [
  'Immediate',
  '15 days',
  '30 days',
  '60 days',
  '90+ days',
];

// Source options
const sourceOptions = [
  'LinkedIn',
  'Naukri',
  'Indeed',
  'Referral',
  'Company Website',
  'Other',
];
---

<!-- White/Light Background Section (like FAQ/Contact) -->
<section id="application-section" class="hidden">
  <Wrapper variant="standard" class="py-24 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <!-- Left Column: Info -->
      <div class="max-w-xl space-y-6">
        <Kicker class="text-accent-600">Apply Now</Kicker>
        <Text
          tag="h2"
          variant="displaySM"
          class="font-medium tracking-tight text-base-900"
        >
          Apply for {jobTitle}
        </Text>
        <Text tag="p" variant="textLG" class="text-base-600">
          Fill out the form and upload your resume. We'll review your application and get back to you within 5-7 business days.
        </Text>
        
        <!-- Back to job details link -->
        <button 
          type="button"
          id="close-application-form"
          class="text-accent-600 hover:text-accent-500 font-medium flex items-center gap-2 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to job details
        </button>
      </div>

      <!-- Right Column: Dark Form Container (like Contact) -->
      <div class="bg-accent-950 rounded-lg p-8">
        
        <!-- Form -->
        <form id="application-form">
          <!-- Hidden fields -->
          <input type="hidden" name="job_title" value={jobTitle} />
          <input type="hidden" name="job_slug" value={jobSlug} />
          <input type="hidden" name="job_department" value={jobDepartment} />

          <h3 class="text-lg font-medium tracking-tight text-white">
            Your Application
          </h3>
          <p class="text-base text-base-400 mt-1">
            All fields marked with <span class="text-accent-400">*</span> are required.
          </p>
          
          <div class="space-y-4 mt-8">
            
            <!-- Full Name (Required) -->
            <div class="space-y-2">
              <label for="full_name" class="text-sm text-base-400 block">
                Full Name<span class="text-accent-400">*</span>
              </label>
              <input
                id="full_name"
                type="text"
                name="full_name"
                required
                autocomplete="name"
                placeholder="Your full name"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Email (Required) -->
            <div class="space-y-2">
              <label for="email" class="text-sm text-base-400 block">
                Email Address<span class="text-accent-400">*</span>
              </label>
              <input
                id="email"
                type="email"
                name="email"
                required
                autocomplete="email"
                placeholder="your@email.com"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>
            
            <!-- Mobile Number (Required) -->
            <div class="space-y-2">
              <label for="mobile" class="text-sm text-base-400 block">
                Mobile Number<span class="text-accent-400">*</span>
              </label>
              <input
                id="mobile"
                type="tel"
                name="mobile"
                required
                inputmode="numeric"
                maxlength="15"
                autocomplete="tel"
                placeholder="Your mobile number"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
              <p id="mobile-error" class="text-red-400 text-xs hidden">
                Please enter a valid mobile number (minimum 10 digits)
              </p>
            </div>

            <!-- Current Location -->
            <div class="space-y-2">
              <label for="current_location" class="text-sm text-base-400 block">
                Current Location
              </label>
              <input
                id="current_location"
                type="text"
                name="current_location"
                placeholder="City, State"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- LinkedIn Profile -->
            <div class="space-y-2">
              <label for="linkedin_url" class="text-sm text-base-400 block">
                LinkedIn Profile
              </label>
              <input
                id="linkedin_url"
                type="url"
                name="linkedin_url"
                placeholder="https://linkedin.com/in/yourprofile"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Years of Experience (Required) -->
            <div class="space-y-2">
              <label for="years_of_experience" class="text-sm text-base-400 block">
                Total Years of Experience<span class="text-accent-400">*</span>
              </label>
              <input
                id="years_of_experience"
                type="number"
                name="years_of_experience"
                required
                min="0"
                max="50"
                step="0.5"
                placeholder="e.g., 3"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Current Organization -->
            <div class="space-y-2">
              <label for="current_organization" class="text-sm text-base-400 block">
                Current/Most Recent Organization
              </label>
              <input
                id="current_organization"
                type="text"
                name="current_organization"
                placeholder="Company name"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Current Designation -->
            <div class="space-y-2">
              <label for="current_designation" class="text-sm text-base-400 block">
                Current/Most Recent Designation
              </label>
              <input
                id="current_designation"
                type="text"
                name="current_designation"
                placeholder="Your job title"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Expected CTC -->
            <div class="space-y-2">
              <label for="expected_ctc" class="text-sm text-base-400 block">
                Expected CTC (â‚¹ LPA)
              </label>
              <input
                id="expected_ctc"
                type="number"
                name="expected_ctc"
                min="0"
                step="0.5"
                placeholder="e.g., 8"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              />
            </div>

            <!-- Notice Period -->
            <div class="space-y-2">
              <label for="notice_period" class="text-sm text-base-400 block">
                Notice Period
              </label>
              <select
                id="notice_period"
                name="notice_period"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              >
                <option value="" class="text-base-600">Select notice period</option>
                {noticePeriodOptions.map((option) => (
                  <option value={option}>{option}</option>
                ))}
              </select>
            </div>

            <!-- Source -->
            <div class="space-y-2">
              <label for="source" class="text-sm text-base-400 block">
                How did you hear about this role?
              </label>
              <select
                id="source"
                name="source"
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 h-12 text-white focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none"
              >
                <option value="" class="text-base-600">Select an option</option>
                {sourceOptions.map((option) => (
                  <option value={option}>{option}</option>
                ))}
              </select>
            </div>

            <!-- Resume Upload -->
            <div class="space-y-2">
              <label for="resume" class="text-sm text-base-400 block">
                Resume/CV<span class="text-accent-400">*</span>
              </label>
              <div 
                id="resume-dropzone"
                class="border-2 border-dashed border-white/15 rounded-lg p-6 text-center hover:border-accent-500 transition-all cursor-pointer"
              >
                <input
                  id="resume"
                  type="file"
                  name="resume"
                  required
                  accept=".pdf,.doc,.docx,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"
                  class="sr-only"
                />
                <div id="upload-placeholder">
                  <svg class="mx-auto h-10 w-10 text-base-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                  </svg>
                  <p class="mt-2 text-sm text-base-400">
                    <span class="text-accent-500 font-medium">Click to upload</span> or drag and drop
                  </p>
                  <p class="mt-1 text-xs text-base-500">
                    PDF, DOC, or DOCX (Max 5MB)
                  </p>
                </div>
                <div id="upload-preview" class="hidden">
                  <div class="flex items-center justify-center gap-3">
                    <svg class="h-8 w-8 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <div class="text-left">
                      <p id="file-name" class="text-sm font-medium text-white"></p>
                      <p id="file-size" class="text-xs text-base-500"></p>
                    </div>
                    <button type="button" id="remove-file" class="ml-4 text-red-400 hover:text-red-300">
                      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
              <p id="resume-error" class="text-red-400 text-xs hidden">
                Please upload your resume (PDF, DOC, or DOCX, max 5MB)
              </p>
            </div>

            <!-- Cover Letter -->
            <div class="space-y-2">
              <label for="cover_letter" class="text-sm text-base-400 block">
                Cover Letter
              </label>
              <textarea
                id="cover_letter"
                name="cover_letter"
                rows="3"
                placeholder="Briefly introduce yourself and highlight relevant experience..."
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none resize-none"
              ></textarea>
            </div>

            <!-- Why Transunifyy -->
            <div class="space-y-2">
              <label for="why_transunifyy" class="text-sm text-base-400 block">
                Why do you want to work at Transunifyy?
              </label>
              <textarea
                id="why_transunifyy"
                name="why_transunifyy"
                rows="3"
                placeholder="Share what excites you about our mission..."
                class="w-full rounded border border-white/15 bg-accent-950 px-4 py-3 text-white placeholder:text-base-600 focus:border-accent-500 focus:ring-2 focus:ring-accent-500 transition-all focus:outline-none resize-none"
              ></textarea>
            </div>

            <!-- Captcha Container (shown after threshold) -->
            <div id="captcha-container" class="hidden">
              <p class="text-sm text-base-400 mb-2">Please verify you're human:</p>
              <div 
                id="cf-turnstile"
                class="cf-turnstile" 
                data-sitekey={TURNSTILE_SITE_KEY}
                data-theme="dark"
                data-callback="onTurnstileSuccess"
                data-expired-callback="onTurnstileExpired"
              ></div>
              <p id="captcha-error" class="text-red-400 text-xs hidden mt-2">
                Please complete the verification
              </p>
            </div>
          </div>

          <!-- Error Message -->
          <div id="form-error" class="hidden mt-4 p-3 bg-red-500/20 border border-red-500/50 rounded text-red-300 text-sm">
            Something went wrong. Please try again.
          </div>

          <!-- Submit Button (White like Contact form) -->
          <button 
            type="submit" 
            id="submit-btn"
            class="w-full mt-6 bg-white text-accent-950 font-medium py-3 px-6 rounded hover:bg-base-100 transition-colors duration-300 disabled:opacity-50 disabled:cursor-not-allowed flex items-center justify-center gap-2"
          >
            <span id="btn-text">Submit Application</span>
            <svg id="btn-spinner" class="hidden animate-spin h-5 w-5" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>
        </form>

        <!-- Thank You Message (Hidden by default) -->
        <div id="thank-you-message" class="hidden text-center py-8">
          <div class="flex justify-center mb-6">
            <div class="w-20 h-20 bg-accent-500/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-semibold text-white mb-3">
            Thank You for Applying!
          </h3>
          <p class="text-base-400 mb-2">
            Your application for <strong class="text-white">{jobTitle}</strong> has been received.
          </p>
          <p class="text-base-500 text-sm mb-6">
            Our team will review your profile and reach out within 5-7 business days.
          </p>
          <button 
            type="button"
            id="back-to-job"
            class="text-accent-500 hover:text-accent-400 underline text-sm transition-colors"
          >
            Back to job details
          </button>
        </div>
      </div>
    </div>
  </Wrapper>
</section>

<script define:vars={{ SUPABASE_URL, SUPABASE_ANON_KEY, TURNSTILE_SITE_KEY, jobSlug }}>
  // ===== CONFIGURATION =====
  const CONFIG = {
    CAPTCHA_THRESHOLD: 2,
    STORAGE_KEY: 'tfy_app_count',
    SUPABASE_URL: SUPABASE_URL,
    SUPABASE_ANON_KEY: SUPABASE_ANON_KEY,
    TURNSTILE_SITE_KEY: TURNSTILE_SITE_KEY,
    JOB_SLUG: jobSlug,
    MAX_FILE_SIZE: 5 * 1024 * 1024,
    ALLOWED_FILE_TYPES: [
      'application/pdf',
      'application/msword',
      'application/vnd.openxmlformats-officedocument.wordprocessingml.document'
    ],
  };

  let turnstileToken = null;
  let turnstileLoaded = false;
  let captchaRequired = false;
  let selectedFile = null;

  const $ = (id) => document.getElementById(id);
  const applicationSection = $('application-section');
  const form = $('application-form');
  const mobileInput = $('mobile');
  const mobileError = $('mobile-error');
  const resumeInput = $('resume');
  const resumeDropzone = $('resume-dropzone');
  const uploadPlaceholder = $('upload-placeholder');
  const uploadPreview = $('upload-preview');
  const fileNameEl = $('file-name');
  const fileSizeEl = $('file-size');
  const removeFileBtn = $('remove-file');
  const resumeError = $('resume-error');
  const captchaContainer = $('captcha-container');
  const captchaError = $('captcha-error');
  const thankYouMessage = $('thank-you-message');
  const submitBtn = $('submit-btn');
  const btnText = $('btn-text');
  const btnSpinner = $('btn-spinner');
  const formError = $('form-error');
  const closeFormBtn = $('close-application-form');
  const backToJobBtn = $('back-to-job');

  // Nav color toggle helper (matches Header.astro logic)
  let formIsOpen = false;
  
  function setNavDark(isDark) {
    const navEl = document.querySelector('[data-nav]');
    const logoEl = document.querySelector('[data-logo]');
    const primaryLinks = document.querySelectorAll('[data-primary-link]');
    const burger = document.querySelector('[data-burger]');
    const close = document.querySelector('[data-close]');
    
    const swapColor = (el, dark) => {
      if (!el) return;
      el.classList.remove('text-white', 'text-base-800');
      el.classList.add(dark ? 'text-base-800' : 'text-white');
    };
    
    if (navEl) {
      navEl.classList.toggle('bg-white', isDark);
      navEl.classList.toggle('border-base-200', isDark);
      navEl.classList.toggle('border-white/10', !isDark);
    }
    swapColor(logoEl, isDark);
    primaryLinks.forEach((el) => swapColor(el, isDark));
    swapColor(burger, isDark);
    swapColor(close, isDark);
  }

  function showApplicationForm() {
    formIsOpen = true;
    applicationSection?.classList.remove('hidden');
    applicationSection?.scrollIntoView({ behavior: 'smooth', block: 'start' });
    
    // Force nav to dark text (white background form)
    setNavDark(true);
    
    // Override scroll behavior while form is open
    window.applicationFormOpen = true;
  }

  function hideApplicationForm() {
    formIsOpen = false;
    applicationSection?.classList.add('hidden');
    window.scrollTo({ top: 0, behavior: 'smooth' });
    
    // Restore nav color based on scroll position
    window.applicationFormOpen = false;
    const scrolled = window.scrollY > 0;
    setNavDark(scrolled);
  }
  
  // Re-apply dark nav on scroll while form is open
  window.addEventListener('scroll', () => {
    if (formIsOpen) {
      setNavDark(true);
    }
  });

  document.addEventListener('click', (e) => {
    const applyBtn = e.target.closest('[data-apply-trigger]');
    if (applyBtn) {
      e.preventDefault();
      showApplicationForm();
    }
  });

  closeFormBtn?.addEventListener('click', hideApplicationForm);
  backToJobBtn?.addEventListener('click', hideApplicationForm);

  function getSubmissionCount() {
    try {
      const data = JSON.parse(localStorage.getItem(CONFIG.STORAGE_KEY) || '{}');
      const today = new Date().toDateString();
      if (data.date !== today) return 0;
      return data.count || 0;
    } catch { return 0; }
  }

  function incrementSubmissionCount() {
    try {
      const today = new Date().toDateString();
      localStorage.setItem(CONFIG.STORAGE_KEY, JSON.stringify({
        date: today,
        count: getSubmissionCount() + 1
      }));
    } catch {}
  }

  function shouldShowCaptcha() {
    return getSubmissionCount() >= CONFIG.CAPTCHA_THRESHOLD;
  }

  function loadTurnstileScript() {
    return new Promise((resolve) => {
      if (turnstileLoaded) { resolve(); return; }
      const script = document.createElement('script');
      script.src = 'https://challenges.cloudflare.com/turnstile/v0/api.js';
      script.async = true;
      script.defer = true;
      script.onload = () => { turnstileLoaded = true; resolve(); };
      document.head.appendChild(script);
    });
  }

  async function initCaptcha() {
    if (!shouldShowCaptcha() || !CONFIG.TURNSTILE_SITE_KEY) return;
    captchaRequired = true;
    captchaContainer?.classList.remove('hidden');
    await loadTurnstileScript();
  }

  window.onTurnstileSuccess = (token) => { turnstileToken = token; captchaError?.classList.add('hidden'); };
  window.onTurnstileExpired = () => { turnstileToken = null; };

  function formatFileSize(bytes) {
    if (bytes < 1024) return bytes + ' B';
    if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
    return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
  }

  function validateFile(file) {
    if (!file) return 'Please select a file';
    if (!CONFIG.ALLOWED_FILE_TYPES.includes(file.type)) return 'Please upload a PDF, DOC, or DOCX file';
    if (file.size > CONFIG.MAX_FILE_SIZE) return 'File size must be less than 5MB';
    return null;
  }

  function handleFileSelect(file) {
    const error = validateFile(file);
    if (error) {
      resumeError.textContent = error;
      resumeError?.classList.remove('hidden');
      selectedFile = null;
      return;
    }
    selectedFile = file;
    resumeError?.classList.add('hidden');
    fileNameEl.textContent = file.name;
    fileSizeEl.textContent = formatFileSize(file.size);
    uploadPlaceholder?.classList.add('hidden');
    uploadPreview?.classList.remove('hidden');
  }

  function clearFile() {
    selectedFile = null;
    resumeInput.value = '';
    uploadPlaceholder?.classList.remove('hidden');
    uploadPreview?.classList.add('hidden');
  }

  resumeInput?.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (file) handleFileSelect(file);
  });

  resumeDropzone?.addEventListener('click', () => { resumeInput?.click(); });

  resumeDropzone?.addEventListener('dragover', (e) => {
    e.preventDefault();
    resumeDropzone.classList.add('border-accent-500');
  });

  resumeDropzone?.addEventListener('dragleave', (e) => {
    e.preventDefault();
    resumeDropzone.classList.remove('border-accent-500');
  });

  resumeDropzone?.addEventListener('drop', (e) => {
    e.preventDefault();
    resumeDropzone.classList.remove('border-accent-500');
    const file = e.dataTransfer.files[0];
    if (file) {
      handleFileSelect(file);
      const dataTransfer = new DataTransfer();
      dataTransfer.items.add(file);
      resumeInput.files = dataTransfer.files;
    }
  });

  removeFileBtn?.addEventListener('click', (e) => { e.stopPropagation(); clearFile(); });

  function setLoading(loading) {
    if (submitBtn) submitBtn.disabled = loading;
    if (btnText) btnText.textContent = loading ? 'Submitting...' : 'Submit Application';
    btnSpinner?.classList.toggle('hidden', !loading);
  }

  function showError(message) {
    if (formError) { formError.textContent = message; formError.classList.remove('hidden'); }
  }

  function hideError() { formError?.classList.add('hidden'); }

  mobileInput?.addEventListener('input', (e) => {
    e.target.value = e.target.value.replace(/[^0-9]/g, '');
    if (e.target.value.length >= 10) mobileError?.classList.add('hidden');
  });

  mobileInput?.addEventListener('blur', () => {
    if (mobileInput.value.length > 0 && mobileInput.value.length < 10) mobileError?.classList.remove('hidden');
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    hideError();

    if (mobileInput && mobileInput.value.length < 10) {
      mobileError?.classList.remove('hidden');
      mobileInput.focus();
      return;
    }

    if (!selectedFile) {
      resumeError.textContent = 'Please upload your resume';
      resumeError?.classList.remove('hidden');
      resumeDropzone?.scrollIntoView({ behavior: 'smooth', block: 'center' });
      return;
    }

    if (captchaRequired && !turnstileToken) {
      captchaError?.classList.remove('hidden');
      return;
    }

    setLoading(true);

    try {
      const formData = new FormData(form);
      const timestamp = Date.now();
      const safeName = selectedFile.name.replace(/[^a-zA-Z0-9._-]/g, '_');
      const year = new Date().getFullYear();
      const month = String(new Date().getMonth() + 1).padStart(2, '0');
      const filePath = `${year}/${month}/${CONFIG.JOB_SLUG}/${timestamp}_${safeName}`;

      const uploadResponse = await fetch(
        `${CONFIG.SUPABASE_URL}/storage/v1/object/resumes/${filePath}`,
        {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${CONFIG.SUPABASE_ANON_KEY}`,
            'Content-Type': selectedFile.type,
            'x-upsert': 'false',
          },
          body: selectedFile,
        }
      );

      if (!uploadResponse.ok) {
        const uploadError = await uploadResponse.text();
        console.error('Upload error:', uploadError);
        throw new Error('Failed to upload resume');
      }

      const applicationData = {
        job_title: formData.get('job_title'),
        full_name: formData.get('full_name'),
        email: formData.get('email'),
        mobile: formData.get('mobile'),
        current_location: formData.get('current_location') || null,
        linkedin_url: formData.get('linkedin_url') || null,
        years_of_experience: formData.get('years_of_experience') ? parseFloat(formData.get('years_of_experience')) : null,
        current_organization: formData.get('current_organization') || null,
        current_designation: formData.get('current_designation') || null,
        expected_ctc: formData.get('expected_ctc') ? parseFloat(formData.get('expected_ctc')) : null,
        notice_period: formData.get('notice_period') || null,
        source: formData.get('source') || null,
        cover_letter: formData.get('cover_letter') || null,
        why_transunifyy: formData.get('why_transunifyy') || null,
        resume_path: filePath,
        resume_filename: selectedFile.name,
        resume_size: selectedFile.size,
        source_page: window.location.pathname,
        referrer: document.referrer || null,
        captcha_verified: captchaRequired ? !!turnstileToken : null,
      };

      const insertResponse = await fetch(`${CONFIG.SUPABASE_URL}/rest/v1/job_applications`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'apikey': CONFIG.SUPABASE_ANON_KEY,
          'Authorization': `Bearer ${CONFIG.SUPABASE_ANON_KEY}`,
          'Prefer': 'return=representation'
        },
        body: JSON.stringify(applicationData)
      });

      if (!insertResponse.ok) throw new Error('Failed to submit application');

      incrementSubmissionCount();
      form.classList.add('hidden');
      thankYouMessage?.classList.remove('hidden');

    } catch (error) {
      console.error('Application submission error:', error);
      showError('Something went wrong. Please try again or contact us directly at contact@transunifyy.com');
    } finally {
      setLoading(false);
    }
  });

  document.addEventListener('DOMContentLoaded', () => { initCaptcha(); });
</script>

