---
// Assets
import Logo from "@/components/assets/Logo.astro";
import { Image } from "astro:assets";
import heroImage from "@/images/assets/transTeam.jpg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<section class="bg-accent-950">
  <Wrapper
    variant="standard"
    class="py-12 pt-48 lg:border-x lg:border-white/10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-8 gap-x-20">
      <div class="lg:col-span-2 text-balance">
        <Kicker class="text-accent-300">Together for Social Good</Kicker>
        <Text
          tag="h1"
          variant="displayLG"
          class="text-white font-medium tracking-tight mt-12"
        >
          Where On-Ground Expertise Meets AI-Powered Innovation
        </Text>
        <Text tag="p" variant="textLG" class="text-base-400 max-w-xl mt-4">
          We're development professionals who build technologyâ€”combining decades of field experience with cutting-edge AI to transform how social impact is created and measured.
        </Text>
      </div>
      <div
        class="bg-accent-600 p-8 lg:-mb-26 z-10 relative overflow-hidden lg:order-first lg:min-w-[320px]"
      >
        <div class="relative flex flex-col justify-between h-full">
          <Logo class="h-12 w-fit text-white" />
          <div class="font-medium tracking-tight text-white mt-12 space-y-8">
            <Text tag="p" variant="displaySM"> Data-Driven </Text>
            <Text tag="p" variant="displayMD"> Tech-Enabled </Text>
            <Text tag="p" variant="displayMD"> Impact-Focused </Text>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
  <Wrapper variant="paddingless">
    <Image
      width={1420}
      height={1420}
      src={heroImage}
      alt="Transunifyy Team - Together for Social Good"
      decoding="async"
      loading="lazy"
      class="size-full object-cover max-h-120"
    />
  </Wrapper>
</section>