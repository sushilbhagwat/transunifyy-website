---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const stats = [
  {
    value: "200+",
    title: "Districts Covered",
    description: "Pan-India presence across diverse geographies",
  },
  {
    value: "50+",
    title: "Partner Organizations",
    description: "Corporates, NGOs, foundations, and government agencies",
  },
  {
    value: "1M+",
    title: "Beneficiaries Reached",
    description: "Lives touched through our partner programs",
  },
  {
    value: "100+",
    title: "Projects Delivered",
    description: "Impact assessments, platform deployments, and advisory engagements",
  },
  {
    value: "20+",
    title: "Years Combined Experience",
    description: "Leadership team expertise in finance, tech, and development",
  },
  {
    value: "12+",
    title: "Languages Supported",
    description: "Multilingual platform for ground-level data collection",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        stats.map(({ value, title, description }) => (
          <div class="bg-base-50 rounded p-8">
            <Text
              tag="p"
              variant="displayXL"
              class="text-accent-900 italic font-medium"
            >
              {value}
            </Text>
            <Text
              tag="p"
              variant="textLG"
              class="text-accent-900 font-medium mt-1"
            >
              {title}
            </Text>
            <Text tag="p" variant="textSM" class="text-base-600">
              {description}
            </Text>
          </div>
        ))
      }
    </div>
    <div class="max-w-4xl text-balance mt-12">
      <Kicker class="text-base-600">Measured Impact</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-accent-900 font-medium mt-12"
      >
        A track record built on rigorous methodology, ground-level insights,
        <span class="text-accent-500">
          and technology designed for the social sector
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        We approach every engagement with the same priorities: deep understanding of context, evidence-based recommendations, and solutions that work in the fieldâ€”not just on paper.
        <br />
        <br />
        That commitment to real-world impact is what keeps partners coming back.
      </Text>
    </div>
  </Wrapper>
</section>