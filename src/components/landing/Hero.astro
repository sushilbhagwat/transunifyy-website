---
// Assets
import { Image } from "astro:assets";
import heroImage from "@/images/assets/SDG_Image_1920_1080.png";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Sectors we serve - replacement for stats
const sectors = [
  { icon: "corporate", label: "Corporates & CSR Foundations" },
  { icon: "ngo", label: "NGOs & Implementing Partners" },
  { icon: "government", label: "Government & Public Sector" },
  { icon: "philanthropy", label: "Philanthropies & Multilaterals" },
];
---

<section class="relative min-h-[80dvh] flex flex-col">
  <div class="absolute inset-0 z-0">
    <!-- Video Background -->
    <video autoplay muted loop playsinline class="size-full object-cover">
      <source src="/homepagevideo.mp4" type="video/mp4" />
    </video>
    
    <!-- 
    // IF you do not want a video
    // You can use an image instead
    //
    // Remove the video tag and uncomment the image tag below
    <Image
      width={1290}
      height={920}
      src={heroImage}
      alt="Transunifyy - Together for Social Good"
      decoding="async"
      loading="lazy"
      class="size-full object-cover"
    /> 
    -->
    
    <!-- Dark Overlay - Increased opacity for brighter video -->
    <div
      aria-hidden="true"
      class="absolute pointer-events-none inset-0 bg-accent-950/70"
    >
    </div>
  </div>
  
  <div class="relative z-10 flex-1 flex flex-col">
    <Wrapper
      variant="standard"
      class="flex-1 flex flex-col justify-end py-12 lg:pb-8 pt-28 lg:border-x lg:border-white/10"
    >
      <div class="max-w-xl text-balance">
        <Kicker class="text-white">Tech for Social Good</Kicker>
        <Text
          tag="h1"
          variant="displayLG"
          class="text-white font-medium tracking-tight mt-6"
        >
          Together for Social Good!
        </Text>
        <Text tag="p" variant="textLG" class="text-white max-w-xl mt-4">
          Catalyzing meaningful and sustainable social change through data, technology, and thematic expertise.
        </Text>
      </div>
    </Wrapper>
    
    <!-- Sectors We Serve - 2x2 Grid Layout -->
    <div class="relative z-10 border-t border-white/10">
      <Wrapper variant="standard" class="py-6 lg:border-x lg:border-white/10">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-end gap-6">
          <div class="grid grid-cols-2 gap-4 lg:gap-6">
            {
              sectors.map((sector) => (
                <div class="flex items-center gap-3 bg-white/5 backdrop-blur-sm rounded-lg px-4 py-3 border border-white/10">
                  <span class="flex-shrink-0 size-12 rounded-lg bg-accent-400 flex items-center justify-center">
                    {sector.icon === "corporate" && (
                      <svg class="w-6 h-6 text-accent-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                      </svg>
                    )}
                    {sector.icon === "ngo" && (
                      <svg class="w-6 h-6 text-accent-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    )}
                    {sector.icon === "government" && (
                      <svg class="w-6 h-6 text-accent-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
                      </svg>
                    )}
                    {sector.icon === "philanthropy" && (
                      <svg class="w-6 h-6 text-accent-950" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                      </svg>
                    )}
                  </span>
                  <Text tag="p" variant="textSM" class="text-white font-medium lg:text-base">
  {sector.label}
</Text>
                </div>
              ))
            }
          </div>
        </div>
      </Wrapper>
    </div>
  </div>
</section>