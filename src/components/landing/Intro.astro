---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// Transunifyy Services - 4 bullet points
const services = [
  {
    title: "Impact Assessment & Advisory",
    description: "CSR compliance, SROI analysis & program evaluation",
  },
  {
    title: "Integrated Tech Platform",
    description: "End-to-end NGO & CSR operations management",
  },
  {
    title: "Monitoring & Evaluation",
    description: "Real-time tracking, reporting & data analytics",
  },
  {
    title: "Collaborative Platform",
    description: "Multi-stakeholder engagement & transparency",
  },
];
---

<section class="bg-accent-950">
  <Wrapper
    variant="standard"
    class="py-8 lg:py-0 lg:border-x lg:border-white/10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-8 gap-x-20">
      <!-- Services Box (Replaces Contact) -->
      <div class="bg-accent-600 p-8 lg:-mt-44 z-10 relative overflow-hidden">
        <div class="relative flex flex-col h-full">
          <Logo class="h-12 w-fit text-white" />
          <div>
            <Text
              tag="h2"
              variant="displaySM"
              class="font-medium tracking-tight text-white mt-16"
            >
              Our Services
            </Text>
            <div class="mt-8 space-y-4">
              {
                services.map((service) => (
                  <div class="flex items-start gap-3">
                    <span class="flex-shrink-0 mt-1">
                      <svg class="w-4 h-6 text-white/80" fill="currentColor" viewBox="0 0 20 30">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                    </span>
                    <div>
                      <Text tag="p" variant="textBase" class="text-white font-medium">
                        {service.title}
                      </Text>
                      <Text tag="p" variant="textSM" class="text-white/70 mt-0.5">
                        {service.description}
                      </Text>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Content -->
      <div class="lg:col-span-2 py-12 lg:py-24 max-w-xl">
        <Kicker class="text-accent-400">Partner with us</Kicker>
        <Text
          tag="h3"
          variant="displayMD"
          class="text-white font-medium tracking-tight mt-12"
        >
          Let's amplify your social impact.
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-300 mt-4 text-balance"
        >
          Whether you're a corporate strengthening CSR strategy, an NGO seeking to scale programs, or a foundation measuring outcomes—we bring the expertise and technology to transform your vision into measurable change.
        </Text>
        <div class="flex flex-wrap gap-4 mt-8">
          <Button
            isLink
            size="base"
            variant="muted"
            href="/contact"
            class="w-fit"
          >
            Get in touch
          </Button>
          <Button
            isLink
            size="base"
            variant="ghost"
            href="/services"
            class="w-fit text-white hover:text-white/80"
          >
            Explore services →
          </Button>
        </div>
      </div>
    </div>
  </Wrapper>
</section>