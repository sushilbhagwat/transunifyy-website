---
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const focusAreas = [
  {
    title: "On-Ground Expertise",
    description:
      "Our team comprises seasoned development professionals with deep experience across education, healthcare, livelihoods, WASH, and environment sectors. We understand field realities because we've lived them—designing interventions, engaging communities, and measuring outcomes across 200+ districts in India.",
  },
  {
    title: "SocioAI Technology Platform",
    description:
      "Our proprietary platform isn't enterprise software repurposed for NGOs. It's built from the ground up for social sector challenges—intermittent connectivity, multi-language needs, varying digital literacy, and the demand for rigorous impact measurement. AI-powered insights, not just data collection.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24">
    <div class="max-w-3xl">
      <Kicker class="text-base-600">Our Approach</Kicker>
      <Text
        tag="h2"
        variant="displayMD"
        class="font-medium tracking-tight mt-12 text-balance"
      >
        <span class="text-accent-900">We combine </span>
        <span class="text-accent-500">
          deep domain knowledge with cutting-edge technology to transform how social impact is designed, delivered, and measured.
        </span>
      </Text>
      <Text tag="p" variant="textLG" class="text-base-600 mt-4">
        Development expertise first, technology second. Our work is guided by what works in the field—creating solutions that are practical, scalable, and designed for lasting impact.
      </Text>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mt-12 lg:mt-24">
      {
        focusAreas.map((area) => (
          <div>
            <Text
              tag="h3"
              variant="textXL"
              class="text-accent-900 font-medium"
            >
              {area.title}
            </Text>
            <Text tag="p" variant="textLG" class="text-base-600 mt-2">
              {area.description}
            </Text>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>