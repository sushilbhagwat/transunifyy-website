---
// Assets
import Logo from "@/components/assets/Logo.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// SDGs we align with
const sdgs = [
  { number: "1", name: "No Poverty" },
  { number: "3", name: "Good Health" },
  { number: "4", name: "Quality Education" },
  { number: "6", name: "Clean Water" },
  { number: "8", name: "Decent Work" },
  { number: "13", name: "Climate Action" },
];
---

<section class="bg-accent-950 relative overflow-hidden">
  <Wrapper
    variant="standard"
    class="py-24 lg:py-48 lg:border-x lg:border-white/10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div>
        <Logo class="h-12 text-white" />
        <Kicker class="text-base-400 mt-8">
          Driving impact aligned with the UN Sustainable Development Goals
        </Kicker>
      </div>
      <div class="lg:col-span-2 text-pretty">
        <Text
          tag="h2"
          variant="displayLG"
          class="text-white font-medium tracking-tight"
        >
          From CSR strategy to ground-level implementation,
          <span class="text-accent-400">
            we partner with organizations committed to creating lasting, measurable change.
          </span>
        </Text>
        <Text tag="p" variant="textLG" class="text-base-400 mt-4">
          Our work spans education, healthcare, livelihoods, environment, and rural developmentâ€”always guided by data, enabled by technology, and rooted in what works on the ground.
        </Text>
        
        <!-- SDG Alignment -->
        <div class="mt-12">
          <Text tag="p" variant="textSM" class="text-base-500 uppercase tracking-wider font-medium mb-6">
            Aligned with SDGs
          </Text>
          <div class="flex flex-wrap gap-3">
            {
              sdgs.map((sdg) => (
                <div class="flex items-center gap-2 px-4 py-2 bg-white/5 rounded-full border border-white/10">
                  <span class="size-6 rounded-full bg-accent-400 text-accent-950 flex items-center justify-center text-xs font-bold">
                    {sdg.number}
                  </span>
                  <Text tag="span" variant="textSM" class="text-white">
                    {sdg.name}
                  </Text>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>