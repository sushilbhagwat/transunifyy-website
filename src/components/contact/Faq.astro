---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";

const faqs = [
  {
    question: "How quickly will you respond to my inquiry?",
    answer:
      "We typically reply within one business day. If your request is urgent, include your phone number so we can reach you sooner.",
  },
  {
    question: "What information should I share about my project?",
    answer:
      "A brief description of your organization, the type of social initiative or CSR program, target beneficiaries, geographic scope, timeline, and budget range help us tailor our guidance and connect you with the right experts.",
  },
  {
    question: "Do you work with both corporates and NGOs?",
    answer:
      "Yes. We serve corporates seeking CSR advisory and impact assessment, NGOs looking for technology platforms and capacity building, as well as foundations and government bodies working on social development initiatives.",
  },
  {
    question: "What sectors do you specialize in?",
    answer:
      "Our expertise spans multiple sectors including education, healthcare, livelihoods, water & sanitation, sustainable agriculture, environment, and women empowerment—aligned with Schedule VII and SDG frameworks.",
  },
  {
    question: "Can you help with CSR compliance and reporting?",
    answer:
      "Absolutely. We provide end-to-end support for CSR compliance including project identification, NGO due diligence, impact assessment, and regulatory reporting as per Section 135 and Schedule VII requirements.",
  },
  {
    question: "Do you offer technology solutions for NGOs?",
    answer:
      "Yes. Our integrated platform helps NGOs with project management, beneficiary tracking, survey tools, compliance documentation, and business analytics—designed specifically for the social sector.",
  },
];
---

<section>
  <Wrapper variant="standard" class="py-24 lg:py-32 space-y-10">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <div class="max-w-4xl space-y-6">
        <Kicker class="text-base-600">FAQ</Kicker>
        <Text
          tag="h2"
          variant="textXL"
          class="font-medium leading-tight tracking-tight"
        >
          Answers to common questions before we get started.
        </Text>
        <Text tag="p" variant="textBase" class="text-base-600">
          If you need anything beyond these, send us a message and we'll respond
          with the details you need.
        </Text>
      </div>
      <div class="lg:col-span-2 space-y-1">
        {
          faqs.map((item) => (
            <details class="group bg-base-50 p-4 rounded">
              <summary class="flex items-start gap-4 cursor-pointer list-none [&::-webkit-details-marker]:hidden">
                <div class="flex w-full items-start justify-between gap-4">
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-accent-900 group-hover:text-accent-500"
                  >
                    {item.question}
                  </Text>
                  <Plus size="sm" class="group-open:rotate-90 transition-transform duration-200" />
                </div>
              </summary>
              <div class="pb-8 pt-4">
                <Text
                  tag="p"
                  variant="textBase"
                  class="text-base-600 text-balance"
                >
                  {item.answer}
                </Text>
              </div>
            </details>
          ))
        }
      </div>
    </div>
  </Wrapper>
</section>