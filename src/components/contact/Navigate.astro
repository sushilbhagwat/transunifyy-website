---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import UnderlinedLink from "@/components/fundations/elements/UnderlinedLink.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

const cards = [
  {
    title: "Our Services",
    description:
      "Explore our comprehensive solutions for impact assessment, CSR advisory, and NGO technology platforms.",
    href: "/services",
    cta: "Explore all services",
  },
  {
    title: "Case Studies",
    description: "Discover how we've helped organizations create meaningful social impact across India.",
    href: "/projects",
    cta: "View case studies",
  },
  {
    title: "Join Our Team",
    description: "Be part of our mission to drive sustainable social change through technology and expertise.",
    href: "/careers",
    cta: "View open positions",
  },
];
---

<section class="bg-accent-950">
  <Wrapper variant="standard" class="py-24 lg:py-48">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      <Kicker class="text-base-300">Explore More</Kicker>
      <Text
        tag="h2"
        variant="displayLG"
        class="text-white font-medium lg:col-span-2"
      >
        Discover how we can help amplify your
        <span class="text-accent-500"> social impact</span> through
        <span class="text-accent-500"> data, technology & expertise!</span>
      </Text>
    </div>
    <div
      class="grid gap-6 lg:gap-8 md:grid-cols-2 lg:grid-cols-3 mt-12 lg:mt-24"
    >
      {
        cards.map((card) => (
          <div>
            <div>
              <Text tag="h3" variant="textLG" class="font-medium text-base-100">
                {card.title}
              </Text>
              <Text
                tag="p"
                variant="textBase"
                class="text-base-400 mt-2 text-balance"
              >
                {card.description}
              </Text>
            </div>
            <UnderlinedLink variant="light" href={card.href} class="mt-12">
              {card.cta}
            </UnderlinedLink>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>