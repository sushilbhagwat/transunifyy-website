---
const { class: className = "", variant = "auto", ...rest } = Astro.props;
import logoLight from "../../images/transunifyy-logo-light.PNG";
import logoDark from "../../images/transunifyy-logo-dark.PNG";
---

{variant === "light" && (
  <img 
    src={logoLight.src} 
    alt="Transunifyy" 
    class={className}
    {...rest}
  />
)}

{variant === "dark" && (
  <img 
    src={logoDark.src} 
    alt="Transunifyy" 
    class={className}
    {...rest}
  />
)}

{variant === "auto" && (
  <div class:list={["logo-container", className]} {...rest}>
    <img 
      src={logoLight.src} 
      alt="Transunifyy" 
      class="logo-light"
    />
    <img 
      src={logoDark.src} 
      alt="Transunifyy" 
      class="logo-dark"
    />
  </div>
)}

<style>
  .logo-container {
    position: relative;
  }
  .logo-container img {
    transition: opacity 0.3s ease;
  }
  .logo-light {
    opacity: 1;
  }
  .logo-dark {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  :global(.scrolled) .logo-light {
    opacity: 0;
  }
  :global(.scrolled) .logo-dark {
    opacity: 1;
  }
</style>
