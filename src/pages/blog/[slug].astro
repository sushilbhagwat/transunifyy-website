export const prerender = false;
---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Kicker from "@/components/fundations/elements/Kicker.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import BlogCard from "@/components/blog/BlogCard.astro";

// Get slug from URL
const { slug } = Astro.params;

// Fetch from Supabase
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;

let post = null;
let relatedPosts = [];

try {
  // Fetch the post
  const response = await fetch(
    `${supabaseUrl}/rest/v1/posts?slug=eq.${slug}&is_published=eq.true&limit=1`,
    {
      headers: {
        'apikey': supabaseKey,
        'Authorization': `Bearer ${supabaseKey}`,
        'Content-Type': 'application/json',
      },
    }
  );
  
  if (response.ok) {
    const posts = await response.json();
    post = posts[0] || null;
  }

  // Fetch related posts (same category, excluding current)
  if (post) {
    const relatedResponse = await fetch(
      `${supabaseUrl}/rest/v1/posts?is_published=eq.true&category=eq.${encodeURIComponent(post.category)}&id=neq.${post.id}&limit=3&order=published_at.desc`,
      {
        headers: {
          'apikey': supabaseKey,
          'Authorization': `Bearer ${supabaseKey}`,
          'Content-Type': 'application/json',
        },
      }
    );
    
    if (relatedResponse.ok) {
      relatedPosts = await relatedResponse.json();
    }
  }
} catch (error) {
  console.error('Error fetching post:', error);
}

// 404 if post not found
if (!post) {
  return Astro.redirect('/404');
}

// Format date
const formattedDate = post.published_at 
  ? new Date(post.published_at).toLocaleDateString('en-IN', { 
      day: 'numeric', 
      month: 'long', 
      year: 'numeric' 
    })
  : null;

// SEO
const seo = {
  title: `${post.title} | Transunifyy Blog`,
  description: post.excerpt || post.title,
};
---

<BaseLayout seo={seo} navTransparent={true}>
  <!-- Hero Section -->
  <section class="bg-accent-950">
    <Wrapper
      variant="standard"
      class="py-12 pt-48 lg:border-x lg:border-white/10"
    >
      <div class="max-w-3xl">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm text-base-400 mb-8">
          <a href="/blog" class="hover:text-white transition-colors">Blog</a>
          <span>/</span>
          {post.category && (
            <>
              <a href={`/blog/category/${post.category.toLowerCase().replace(/\s+/g, '-')}`} class="hover:text-white transition-colors">
                {post.category}
              </a>
              <span>/</span>
            </>
          )}
          <span class="text-base-500 truncate">{post.title}</span>
        </nav>
        
        <!-- Category -->
        {post.category && (
          <Kicker class="text-accent-400">{post.category}</Kicker>
        )}
        
        <!-- Title -->
        <Text
          tag="h1"
          variant="displayMD"
          class="font-medium tracking-tight mt-4 text-white"
        >
          {post.title}
        </Text>
        
        <!-- Excerpt -->
        {post.excerpt && (
          <Text tag="p" variant="textLG" class="text-base-300 mt-4">
            {post.excerpt}
          </Text>
        )}
        
        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-6 mt-8 pt-8 border-t border-white/10">
          <!-- Author -->
          <div class="flex items-center gap-3">
            {post.author_avatar ? (
              <img 
                src={post.author_avatar} 
                alt={post.author_name}
                class="size-10 rounded-full object-cover"
              />
            ) : (
              <div class="size-10 rounded-full bg-accent-600 flex items-center justify-center">
                <span class="text-white font-semibold">
                  {post.author_name?.charAt(0) || 'T'}
                </span>
              </div>
            )}
            <div>
              <Text tag="p" variant="textBase" class="text-white font-medium">
                {post.author_name}
              </Text>
              {formattedDate && (
                <Text tag="p" variant="textSM" class="text-base-400">
                  {formattedDate}
                </Text>
              )}
            </div>
          </div>
          
          <!-- Reading Time -->
          {post.reading_time && (
            <div class="flex items-center gap-2 text-base-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span class="text-sm">{post.reading_time} min read</span>
            </div>
          )}
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- Featured Image -->
  {post.featured_image && (
    <section>
      <Wrapper variant="standard" class="py-8">
        <img 
          src={post.featured_image} 
          alt={post.title}
          class="w-full max-h-[500px] object-cover rounded-lg"
        />
      </Wrapper>
    </section>
  )}

  <!-- Content -->
  <section>
    <Wrapper variant="standard" class="py-12">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-3">
          <article class="prose prose-lg max-w-none prose-headings:text-accent-900 prose-p:text-base-700 prose-a:text-accent-600 prose-strong:text-accent-900 prose-li:text-base-700">
            <Fragment set:html={post.content?.replace(/\n/g, '<br>') || ''} />
          </article>
          
          <!-- Tags -->
          {post.tags && post.tags.length > 0 && (
            <div class="mt-12 pt-8 border-t border-base-200">
              <Text tag="p" variant="textSM" class="text-base-500 font-medium mb-4">
                Topics
              </Text>
              <div class="flex flex-wrap gap-2">
                {post.tags.map((tag) => (
                  <a 
                    href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                    class="px-3 py-1 bg-base-100 text-base-600 rounded-full text-sm hover:bg-accent-50 hover:text-accent-700 transition-colors"
                  >
                    {tag}
                  </a>
                ))}
              </div>
            </div>
          )}
          
          <!-- Share -->
          <div class="mt-8 pt-8 border-t border-base-200">
            <Text tag="p" variant="textSM" class="text-base-500 font-medium mb-4">
              Share this article
            </Text>
            <div class="flex gap-4">
              <a 
                href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="size-10 rounded-full bg-base-100 flex items-center justify-center text-base-600 hover:bg-accent-100 hover:text-accent-700 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
              <a 
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                target="_blank"
                rel="noopener noreferrer"
                class="size-10 rounded-full bg-base-100 flex items-center justify-center text-base-600 hover:bg-accent-100 hover:text-accent-700 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a 
                href={`mailto:?subject=${encodeURIComponent(post.title)}&body=${encodeURIComponent(Astro.url.href)}`}
                class="size-10 rounded-full bg-base-100 flex items-center justify-center text-base-600 hover:bg-accent-100 hover:text-accent-700 transition-colors"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </a>
            </div>
          </div>
        </div>
        
        <!-- Sidebar -->
        <aside class="lg:col-span-1">
          <div class="sticky top-24">
            <!-- Back to Blog -->
            <a 
              href="/blog"
              class="flex items-center gap-2 text-accent-600 hover:text-accent-700 font-medium mb-8"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              Back to Blog
            </a>
            
            <!-- CTA -->
            <div class="bg-accent-950 p-6 rounded-lg">
              <Text tag="h3" variant="textLG" class="font-medium text-white">
                Want to amplify your impact?
              </Text>
              <Text tag="p" variant="textSM" class="text-base-400 mt-2">
                Let's discuss how Transunifyy can help your organization measure and maximize social impact.
              </Text>
              <a 
                href="/contact"
                class="inline-flex items-center justify-center w-full mt-4 px-4 py-2 bg-accent-400 text-accent-950 font-medium rounded hover:bg-accent-300 transition-colors"
              >
                Get in Touch
              </a>
            </div>
          </div>
        </aside>
      </div>
    </Wrapper>
  </section>

  <!-- Related Posts -->
  {relatedPosts.length > 0 && (
    <section class="bg-base-50">
      <Wrapper variant="standard" class="py-16">
        <Text tag="h2" variant="textXL" class="font-medium text-accent-900 mb-8">
          Related Articles
        </Text>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedPosts.map((relatedPost) => (
            <BlogCard post={relatedPost} />
          ))}
        </div>
      </Wrapper>
    </section>
  )}
</BaseLayout>